<script>
    async function save() {
        var data = {}
        $('[account]').each(function () { data[$(this).attr('name')] = $(this).val() })
        console.log(data)

        var requestOptions = {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        };

        fetch("/account", requestOptions)
            .then(async result => {
                if (result.status === 200) DisplayModal('success-modal', 'Account Saved', 'Your account has been successfully updated on our database!')
                else DisplayModal('error-modal', 'Bad Request', await result.text())
            })
            .catch(error => {
                DisplayModal('warning-modal', 'Error', error)
            });
    }

