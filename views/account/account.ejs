<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <title>Account | Horizons</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="../assets/images/favicon.ico">

        <!-- Plugins css -->
        <link href="../assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet" type="text/css" />
        <link href="../assets/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" type="text/css" />
        <link href="../assets/libs/clockpicker/bootstrap-clockpicker.min.css" rel="stylesheet" type="text/css" />
        <link href="../assets/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css" />

		<!-- App css -->
		<link href="../assets/css/bootstrap-creative.min.css" rel="stylesheet" type="text/css" id="bs-default-stylesheet" />
		<link href="../assets/css/app-creative.min.css" rel="stylesheet" type="text/css" id="app-default-stylesheet" />

		<link href="../assets/css/bootstrap-creative-dark.min.css" rel="stylesheet" type="text/css" id="bs-dark-stylesheet" />
		<link href="../assets/css/app-creative-dark.min.css" rel="stylesheet" type="text/css" id="app-dark-stylesheet" />

		<!-- icons -->
		<link href="../assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    </head>

        <!-- Begin page -->
        <div id="wrapper">

            <%- include('../header') %>

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Horizons</a></li>
                                            <li class="breadcrumb-item active">Account</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title">Profile</h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-lg-4 col-xl-4">
                                <div class="card-box text-center" style="border-style: solid; border-width: 0.1ex; border-color: <%= locals.user.display.color %>;">

                                    <div id="banner_div" style="margin: -1.5rem -1.5rem 0 -1.5rem; border-radius: .25rem .25rem 0 0; padding: 1rem 0 0 0; background-image: url('<%= locals.banner %>'); background-repeat: repeat; background-size: cover; background-position: center;">


                                        <i class="far fa-edit" onclick="$('#banner_upload').click()" style="right: 1.4rem; top: 0.8rem; width: 1rem; position: absolute; cursor: pointer;"></i>

                                        <img id="avatar_image" onclick="$('#avatar_upload').click()" src="<%= locals.avatar %>" class="rounded-circle avatar avatar-lg" style="border-style: solid; border-color: <%= locals.user.display.color %>; cursor: pointer;" alt="profile-image" title="Upload Profile Picture">

                                        <div class="card-box text-center" style="width: fit-content; margin: .5rem auto 0 auto; padding: .4rem 2rem 0 2rem; border-radius: .5rem .5rem 0 0;">
                                            <h4 class="mb-0" style="margin: 0;"><%= locals.user.display.name %></h4>
                                            <p class="text-muted" style="margin: 0;"><%= locals.user.email %></p>
                                        </div>
                                    </div>

                                    <input id="avatar_upload" type="file" onchange="UploadAvatar()" hidden>
                                    <input id="banner_upload" type="file" onchange="UploadBanner()" hidden>

                                    <script>
                                        function UploadAvatar() {
                                            var oldAvatar = $('#avatar_image').attr('src')

                                            var formdata = new FormData()
                                            formdata.append('file', $('#avatar_upload').prop('files')[0])

                                            fetch('/account?type=avatar', {
                                                method: 'POST',
                                                body: formdata,
                                                redirect: 'follow'
                                            })
                                                .then(async res => {
                                                    var text = await res.text()
                                                    if (res.status === 200) $(`img[src="${oldAvatar}"]`).attr('src', text), console.log('Avatar Uploaded: ' + text)
                                                    else if (res.status === 400) alert(text)
                                                    else if (res.status === 500) alert('Internal Server Error, read console for more information.'), console.log(text)
                                                })
                                        }

                                        function UploadBanner() {
                                            var formdata = new FormData()
                                            formdata.append('file', $('#banner_upload').prop('files')[0])

                                            fetch('/account?type=banner', {
                                                method: 'POST',
                                                body: formdata,
                                                redirect: 'follow'
                                            })
                                                .then(async res => {
                                                    text = await res.text()
                                                    if (res.status === 200) $('#banner_div').css('background-image', `url('${text}')`), console.log('Banner Uploaded: ' + text)
                                                    else if (res.status === 400) alert(text)
                                                    else if (res.status === 400) alert(text)
                                                    else if (res.status === 500) alert('Internal Server Error, read console for more information.'), console.log(text)
                                                })
                                        }
                                    </script>

                                    <div class="text-left mt-3">
                                        <% if (locals.user.details.firstName) { %><h4 class="font-13 text-uppercase" style="display: inline;">Full Name :</h4><p class="text-muted mb-2 font-13" style="display: inline"><span class="ml-2"><%= locals.user.details.firstName %> <%= locals.user.details.lastName %></span></p><br><% } %>

                                        <% if (locals.user.details.gender) { %><h4 class="font-13 text-uppercase" style="display: inline;">Gender :</h4><p class="text-muted mb-2 font-13" style="display: inline"><span class="ml-2"><%= locals.user.details.gender %></span></p><br><% } %>

                                        <% if (locals.user.details.dob) { %><h4 class="font-13 text-uppercase" style="display: inline;">Age :</h4><p class="text-muted mb-2 font-13" style="display: inline"><span class="ml-2 "><%= locals.user.details.dob %></span></p><br><% } %>

                                        <% if (locals.user.details.location.address) { %><h4 class="font-13 text-uppercase" style="display: inline;">Location :</h4><p class="text-muted mb-1 font-13" style="display: inline"><span class="ml-2"><%= locals.user.details.location.address %></span></p><br><% } %>

                                        <!% if (locals.userData.steam) { %><h4 class="font-13 text-uppercase" style="display: inline;">Steam :</h4><p class="text-muted mb-1 font-13" style="display: inline"><a href="<!%= userData.steam._json.profileurl %>" target="_blank" class="ml-2"><!%= userData.steam._json.profileurl %></a></p><br><!% } %>
                                    
                                        <% if (locals.user.details.bio) { %><br>
                                        <h4 class="font-13 text-uppercase">Bio :</h4>
                                        <div class="form-control" style="height: fit-content;">
                                            <p class="text-muted font-13" style="white-space: pre-line; margin-bottom: 0;"><%= locals.user.details.bio %></p>
                                        </div>
                                        <% } %>

                                        <br>
                                        <div style="margin-bottom: 5rem;">
                                            <link href="../assets/custom_css/steamButton.css" rel="stylesheet" type="text/css" />
                                            <a href="/steam/sync" class="steambutton" style="margin-bottom: 10rem;"><span>Sync With Steam</span><div class="icon">
                                                <i class="fab fa-steam-square"></i>
                                            </div></a>
                                        </div>
                                    </div>

                                    <% if (false) { %>
                                    <div>
                                        <video autoplay controls>
                                            <source src="/assets/videos/welcome.mp4" type="video/mp4">
                                        </video>
                                    </div>
                                
                                    <style>
                                        video {
                                            width: 100% !important;
                                            height: auto !important;
                                        }
                                    </style>
                                    <% } %>

                                </div> <!-- end card-box -->

                                <div hidden class="card-box">
                                    <h4 class="header-title mb-3">Inbox</h4>

                                    <div class="inbox-widget" data-simplebar style="max-height: 350px;">
                                        <div class="inbox-item">
                                            <div class="inbox-item-img"><img src="../assets/images/logo-sm-light.png" class="rounded-circle" alt=""></div>
                                            <p class="inbox-item-author">Staff Team</p>
                                            <p class="inbox-item-text">Thanks for becoming a member</p>
                                            <p class="inbox-item-date">
                                                <a href="javascript:(0);" class="btn btn-sm btn-link text-info font-13"> Reply </a>
                                            </p>
                                        </div>
                                    </div> <!-- end inbox-widget -->

                                </div> <!-- end card-box-->

                            </div> <!-- end col-->

                            <div class="col-lg-8 col-xl-8">
                                <div class="card-box">
                                    <ul class="nav nav-pills navtab-bg nav-justified">
                                        <li class="nav-item">
                                            <a href="#display" data-toggle="tab" aria-expanded="true" class="nav-link active">
                                                Public Profile
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#details" data-toggle="tab" class="nav-link">
                                                Details
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#security" data-toggle="tab" class="nav-link">
                                                Security
                                            </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">

                                        <div class="tab-pane show active" id="display">
                                            <%- include('../partials/account/display') %>
                                        </div> 

                                        <div class="tab-pane" id="details">
                                            <%- include('../partials/account/details') %>
                                        </div>

                                        <div class="tab-pane" id="security">
                                            <%- include('../partials/account/security') %>
                                        </div> 

                                        <%- include('../partials/account/script') %>

                                    </div> <!-- end tab-content -->
                                </div> <!-- end card-box-->

                            </div> <!-- end col -->
                        </div>
                        <!-- end row-->

                    </div> <!-- container -->

                </div> <!-- content -->

                <%- include('../footer') %>

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        <%- include('../settings') %>

        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>

        <!-- Vendor js -->
        <script src="../assets/js/vendor.min.js"></script>

        <!-- Plugins js-->
        <script src="../assets/libs/flatpickr/flatpickr.min.js"></script>
        <script src="../assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
        <script src="../assets/libs/clockpicker/bootstrap-clockpicker.min.js"></script>
        <script src="../assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
        
        <!-- Init js-->
        <script src="../assets/js/pages/form-pickers.init.js"></script>

        <!-- App js -->
        <script src="../assets/js/app.min.js"></script>

    </body>

</html>